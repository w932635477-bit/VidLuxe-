{
  "name": "vidluxe",
  "version": "0.1.0",
  "private": true,
  "description": "VidLuxe - Premium Video Enhancement Engine",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "web": "turbo run dev --filter=@vidluxe/web",
    "remotion": "turbo run dev --filter=@vidluxe/remotion",
    "render": "turbo run render --filter=@vidluxe/remotion"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
